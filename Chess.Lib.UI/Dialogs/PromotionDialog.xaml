<dlg:DialogView x:Class="Chess.Lib.UI.Dialogs.PromotionDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Chess.Lib.UI.Dialogs"
             xmlns:dlg="clr-namespace:Common.Lib.UI.Dialogs;assembly=Common.Lib.UI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Width="260" Height="80" IsResizable="False" Animation="None">
	<dlg:DialogView.Resources>
		<Style TargetType="Button">
			<Setter Property="Width" Value="50"/>
			<Setter Property="Height" Value="50"/>
			<Setter Property="Margin" Value="6"/>
			<Setter Property="Command" Value="{Binding Command}"/>
			<Setter Property="VerticalAlignment" Value="Center"/>
		</Style>
	</dlg:DialogView.Resources>
	<Grid>
		<UniformGrid Columns="4">
			<Button CommandParameter="knight">
				<Image Source="{Binding Knight}"/>
			</Button>
			<Button CommandParameter="bishop">
				<Image Source="{Binding Bishop}"/>
			</Button>
			<Button CommandParameter="rook">
				<Image Source="{Binding Rook}"/>
			</Button>
			<Button CommandParameter="queen">
				<Image Source="{Binding Queen}"/>
			</Button>
    </UniformGrid>
	</Grid>
</dlg:DialogView>
